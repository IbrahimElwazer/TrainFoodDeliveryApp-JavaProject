<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".OrderPaymentActivity">


    <TextView
        android:id="@+id/payment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last step: Pay!"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/visa_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:text="Debit / Visa Card"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/visa_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/visa_input"
        app:layout_constraintRight_toRightOf="@id/visa_input"
        app:layout_constraintTop_toBottomOf="@id/payment_title"
        app:layout_constraintVertical_bias="1.0" />


    <EditText
        android:id="@+id/visa_input"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_inputs"
        android:hint="Enter your Visa number.."
        android:paddingLeft="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="#B6A5A5"
        android:textSize="16dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314" />

    <TextView
        android:id="@+id/mobile_title"
        android:layout_width="153dp"
        android:layout_height="23dp"
        android:layout_marginEnd="176dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:text="Mobile Number"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mobile_input"
        app:layout_constraintLeft_toLeftOf="@id/mobile_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/mobile_input"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_inputs"
        android:hint="Enter your mobile number.."
        android:paddingLeft="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="#B6A5A5"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintLeft_toLeftOf="@+id/mobile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/seat_number"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="Deck and Seat Number"
        android:textColor="#000000"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/seat_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/seat_input"
        app:layout_constraintRight_toRightOf="@+id/seat_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/seat_input"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_inputs"
        android:hint="Enter deck and seat number.."
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="#B6A5A5"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="@+id/departure_city_input"
        app:layout_constraintRight_toRightOf="@+id/departure_city_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

    <Button
        android:id="@+id/pay"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="280dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#4E69FF"
        android:text="Complete my order"
        android:textColor="#FFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_title"
        app:layout_constraintVertical_bias="0.846" />

</androidx.constraintlayout.widget.ConstraintLayout>

