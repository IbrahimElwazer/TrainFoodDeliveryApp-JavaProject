<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_item_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/menu_item_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="279dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:text="name"
            android:id="@+id/menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>


        <TextView
            android:text="price"
            android:id="@+id/menu_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_toRightOf="@id/menu_item_name"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <Button
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_alignStart="@id/menu_item_price"
            android:layout_alignEnd="@id/menu_item_image"
            android:layout_alignParentTop="true"
            android:layout_marginStart="277dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="-257dp"
            android:background="@drawable/rounded_corners"
            android:textSize="25dp"
            android:text="+" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>